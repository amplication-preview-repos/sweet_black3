datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  latitude  Float?
  longitude Float?
  bowls     Bowl[]
}

model StatusUpdate {
  id        String                  @id @default(cuid())
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt
  status    EnumStatusUpdateStatus?
  timestamp DateTime?
  bowl      Bowl?                   @relation(fields: [bowlId], references: [id])
  bowlId    String?
  user      User?                   @relation(fields: [userId], references: [id])
  userId    String?
}

model Bowl {
  id            String          @id @default(cuid())
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  capacity      Int?
  status        EnumBowlStatus?
  location      Location?       @relation(fields: [locationId], references: [id])
  locationId    String?
  statusUpdates StatusUpdate[]
}

model User {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  firstName     String?
  lastName      String?
  username      String         @unique
  email         String?        @unique
  password      String
  roles         Json
  statusUpdates StatusUpdate[]
}

enum EnumStatusUpdateStatus {
  Option1
}

enum EnumBowlStatus {
  Option1
}
